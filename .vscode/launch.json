{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend com TSX (sem watch)",
      "runtimeExecutable": "tsx",
      "runtimeArgs": ["--inspect"],
      "args": ["--tsconfig", "backend/tsconfig.json", "backend/src/index.ts"],
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceFolder}",
      "trace": "verbose",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
